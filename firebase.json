{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "disallowLegacyRuntimeConfig": true,
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ],
  "emulators": {
    "functions": { "port": 5002 },
    "database": { "port": 9000 },
    "ui": { "enabled": true },
    "singleProjectMode": true
  },
  "database": {
    "rules": "database.rules.json"
  }
}
